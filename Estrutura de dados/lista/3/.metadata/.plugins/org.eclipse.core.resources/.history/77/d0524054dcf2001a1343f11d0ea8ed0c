package exercicio1;

import javax.swing.JOptionPane;

public class Ex1 {
	
	private static int fila[]= new int[5];
	private static int inicio=0;
	private static int fim;
	private static int tamanho=0;
	
	public static void main(String [] args) {
		
		adiciona(20);
		adiciona(10);
		
	}
	
	public static void adiciona(int numero) {
		if(!cheia()) {
			JOptionPane.showMessageDialog(null, "A fila está cheia");
		}else {
			fila[tamanho]=numero;
			tamanho++;
			fim =tamanho-1;
			JOptionPane.showMessageDialog(null, "O início da fila fica na posiçao: " + inicio + 
					"\nO primeiro elemento da fila é " + fila[inicio] + 
					"\nO fim da fila fica na posiçao: " + fim + 
					"\nO valor da posição final é: " + fila[fim]);
		}
	}
	
	public static boolean vazia() {
		boolean a;
		if(tamanho == 0) {a=true;}else {a=false;}
		return a;
	}
	
	public static boolean cheia() {
		boolean a;
		if(tamanho == 5) {a=true;}else {a=false;}
		return a;
	}

}
