package exercicio3;
import exercicio2.*;

import javax.swing.JOptionPane;

public class Main {
		
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Ex2 e = new Ex2();
		Teste ex = new Teste();
		int opc = 0;
		while(opc!=11) {
			opc = Integer.parseInt(JOptionPane.showInputDialog("digite\n"
					+ "1-saber se a fila esta cheia\n"
					+ "2-saber se a fila está vazia\n"
					+ "3-adicionar na fila"
					+ "4-remover da fila (e adicionar na pilha)"
					+ "5 - info de fila"
					+ "6-saber se a pilha esta cheia\n"
					+ "7-saber se a pilha está vazia\n"
					+ "8-adicionar na pilha"
					+ "9-remover da pilha (e adicionar na fila)"
					+ "10 - info de pilha"
					+ "11-fim"));
			
			switch(opc) {
			case 1:
				e.filaCheia();
				break;
				
			case 2:
				e.filaVazia();
				break;
				
			case 3:
				e.adicionaFila(Integer.parseInt(JOptionPane.showInputDialog("que numero?")));
				break;
				
			case 4:
				e.removeFila();
				break;
				
			case 5:
				e.infoFila();
				break;
				
			case 6:
				ex.pilhaCheia();
				break;
				
			case 7:
				ex.pilhaVazia();
				break;
				
			case 8:
				ex.adicionaPilha(Integer.parseInt(JOptionPane.showInputDialog("que numero?")));
				break;
				
			case 9:
				ex.removePilha();
				break;
				
			case 10:
				ex.infoPilha();
				break;
				
			case 11:
				JOptionPane.showInputDialog("FIM");
				break;
			default:
				JOptionPane.showInputDialog("FIM");
			}
			
		}
		
	}

}
