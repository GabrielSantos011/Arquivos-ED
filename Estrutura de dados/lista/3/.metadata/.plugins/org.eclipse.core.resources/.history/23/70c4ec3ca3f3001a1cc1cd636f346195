package exercicio3;

import javax.swing.JOptionPane;

public class Teste {
	
	private int pilha[] = new int[5];
	private int topo=-1;
	
	public boolean pilhaCheia() {
		boolean a;
		if (topo==4) {
			a=true;
			JOptionPane.showMessageDialog(null, "Esta cheia");
		}else {
			a=false;
			JOptionPane.showMessageDialog(null, "Não Esta cheia");
		}
		return a;
	}
	
	
	public boolean pilhaVazia() {
		boolean a;
		if (topo==-1) {
			a=true;
			JOptionPane.showMessageDialog(null, "Esta vazia");
		}else {
			a=false;
			JOptionPane.showMessageDialog(null, "Não Esta vazia");
		}
		return a;
	}
	
	
	public void adicionaPilha(int numero) {
		topo++;
		pilha[topo]=numero;
		
	}
	
	public void removePilha() {
		pilha[topo]=0;
		topo--;
	}
	
	public void infoPilha() {
		if(pilhaVazia()) {
			JOptionPane.showMessageDialog(null, "pilha vazia");
		}else {
			JOptionPane.showMessageDialog(null, "A base da pilha tem base na posição 0 e tem valor" + pilha[0] + 
					"\nO topo da pilha fica na posiçao: " + topo + " e tem valor " + pilha[topo]);
		}
	}

}
